/* set_store.wxss */
.store-info{
    background-color: white;
    padding: 0 10rpx;
}
.store-name{
    height: 100rpx;
    border-bottom: 1px solid #f5f5f5; 
}
.store-title{
    float: left;
    margin-left: 20rpx;
    margin-top: 30rpx;
    font-size: 30rpx;
}
.store-input{
    font-size: 28rpx;
    color: #7f7f7f;
    height: 95rpx;
    line-height: 95rpx;
    vertical-align: middle;
}
.store-line{
    height: 2rpx;
    background-color: #f5f5f5;
    margin-left: 20rpx;
    margin-right: 20rpx;
}
.store-logo{
    width: 100%;
    height: 790rpx;
    background-color: white;
    margin-top: 10rpx;
}
.store-img{
    width: 100%;
    height: 294rpx;
    margin-top: 20rpx;
}
.store-btn{
    width: 80%;
    height: 80rpx;
    line-height: 80rpx;
    vertical-align: middle;
    text-align: center;
    margin-left: 10%;
    margin-right: 10%;
    background-color: red;
    color: white;
    margin-top: 20rpx;
    border-radius: 10rpx;
}