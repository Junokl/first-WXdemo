/* cart4.wxss */
page {
    background-color: #fff;
}
.payorder-header {
    position: relative;
    padding-top: 20rpx;
    padding-bottom: 20rpx;
    border-bottom: 20rpx solid #f2f2f2;
}
.payorder-mode-wapper {
    position: relative;
    padding-top: 20rpx;
}
.payorder-mode-item {
    padding: 30rpx 0;
    border-bottom: 1rpx solid #E6E6E6;
}
.payorder-mode-pic {
    width: 80rpx;
    height: 80rpx;
    flex: 0 0 80rpx;
    margin-right: 20rpx;
}
.pay-wapprer {
    display: flex;
    justify-content: center;
    align-items: center;
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    z-index: 10;
}
.pay-wapprer .pay-bg{
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: rgba(0, 0, 0, .8);
    z-index: 11;
}
.pay-wapprer .pay-box{
    position: absolute;
    box-sizing: border-box;
    padding: 40rpx;
    top: 50%;
    left: 50%;
    z-index: 12;
    transform: translate(-50%, -50%);
    width: 560rpx;
    background-color: #fff;
    border-radius: 20rpx;
}
.pay-text {
    font-size: 26rpx;
    text-align: center;
    color: #333;
    margin-bottom: 60rpx;
}
.pay-success {
    width: 100%;
    margin-top: 60rpx;
    font-size: 32rpx;
    background: #ff4f70;
    text-align: center;
    line-height: 88rpx;
    height: 88rpx;
    border-radius: 14rpx;
    color: #fff;
}
.pay-input {
    width: 100%;
    border-bottom: 1px solid #f2f2f2;
    font-size: 26rpx;
    color: #333;
    text-align: center;
    line-height: 60rpx;
}