page{
    background-color: #F5F5F5; 
}
.container {
    display: flex;
    height: 100%;
    align-items: center;/*垂直居中*/
    justify-content: center;/*水平居中*/
    background-color: #fff; 
}
.login-in{
    overflow-x: hidden;
    overflow-y: scroll;
    -webkit-overflow-scrolling: touch;
    padding-bottom: 50rpx;
    padding: 24rpx 24rpx 100rpx;
    width: 100%;
    box-sizing: border-box;
    background-color: #F5F5F5; 
}
.store-list {
    background-color: #fff;
    border-radius: 10rpx;
    margin-bottom: 20rpx;
    padding-bottom: 10rpx;
}
.order-item{
    display: flex;
    justify-content: space-around;
    height: 200rpx;
    padding: 10rpx 30rpx;
}
.goods-ico{
    padding-top: 10rpx;
    display: flex;
    align-items: center;
    margin-right: 20rpx;
}
.goods-img{
    width: 180rpx;
    height: 190rpx;
    font-size: 0;
    padding-top: 20rpx;
    padding-right: 20rpx;
}
.order-item + .order-item .goods-img {
    border-top: 1px solid #E6E6E6
}
.goods-img image {
    width: 180rpx;
    height: 180rpx;
}
.goods-cont{
    position: relative;
    width: 430rpx;
    height: 200rpx;
    font-size: 28rpx;
}
.order-item + .order-item .goods-cont {
    border-top: 1px solid #E6E6E6;
}
.goods-name{
    width: 350rpx;
    margin: 16rpx 0 18rpx;
    color: #333;
    font-size: 28rpx;
    line-height: 32rpx;
}
.goods-attribute{
    max-height: 40px;
    overflow: hidden;
    color:#999;
    padding: 0 10rpx;
    height: 40rpx;
    line-height: 40rpx;
    background:rgba(245,245,245,1);
    border-radius: 5rpx;
    display: inline-block;
    font-size: 24rpx;
}
.goods-price{
    margin-top: 10rpx;
}
.btn-del{
    position: absolute;
    right: 0;
    top: 8rpx;
    width: 44rpx;
    height: 44rpx;
}

.count{
    position: absolute;
    right: 0;
    bottom: 5rpx;
    width: 156rpx;
    height: 50rpx;
    border: 1px solid #ddd;
    border-radius: 8rpx;
}
.count.no {
   bottom: 50rpx; 
}
.count>view,.count>input{
    float: left;
    width: 50rpx;
    height: 50rpx;
    line-height: 50rpx;
    text-align: center;
}
.sub{
    border-right: 1px solid #ddd;
}
.add{
    border-left: 1px solid #ddd;
}
.pay-for{
    width: 100%;
    height: 100rpx;
    position: fixed;
    left: 0;
    bottom: 0;
    font-size: 28rpx;
    z-index: 102;
    color: #666;
    background-color:#fff;
}
.pay-for .pay-btn{
    float: right;
    width: 200rpx;
    height: 100rpx;
    line-height: 100rpx;
    text-align: center;
    background-color: #ff4f70;
    color: #fff;
    border-radius:0;
}
.pay-for .consumer{
    float: right;
    margin-right: 20rpx;
    line-height: 50rpx;  
}
.pay-for .checkbox{
    float: left;
    padding-left: 40rpx;
    line-height: 100rpx;
    display: flex;
    align-items: center;
}
.pay-for .ico-check{
   display: flex;
   align-items: center;
   margin-right: 20rpx;
}
.store-mes{
    height: 32rpx;
    padding: 28rpx 30rpx;
}
.store-mes icon{
    margin-right: 20rpx;
}
.go-store{
    float: left;
    display: flex;
    height: 36rpx;
}
.store-ico,.store-arrow{
    width: 32rpx;
    height: 32rpx;
}
.store-name{
    font-size: 28rpx;
    margin-right: 10rpx;
}
.coupon{
    float: right;
    font-size: 28rpx;
    line-height: 32rpx;
    color:#ff4f70;
}
.new-cart-footer {
    position: fixed;
    left: 0;
    width: 100%;
    z-index: 101;
    bottom: 0;
    height: 100rpx;
    box-sizing: border-box;
    padding: 20rpx 30rpx;
    display: flex;
    justify-content: space-between;
    background-color: #fff;
}
.new-cart-footer .checkbox {
    display: inline-flex;
    align-items: center;
    margin-left: 30rpx;
}
.new-cart-right {
    display: inline-flex;
    align-items: center;
    margin-left: 30rpx;
}
.new-cart-footer .checkbox .ico-check {
    margin-right: 10rpx;
}
.new-cart-pay {
    height: 60rpx;
    line-height: 60rpx;
    text-align: center;
    width: 194rpx;
    color: #fff;
    margin-left: 36rpx;
    border-radius: 30rpx;
}