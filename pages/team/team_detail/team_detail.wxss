}
.new-guarantee-box{
  width: 100%;
  display: flex;
  background:#fff;
  
}
.new-guarantee {
    width: 100%;
    display: flex;
    margin-left:30rpx;
    margin-right:30rpx;
    border-bottom: 1rpx solid #ddd;
}
.new-guarantee-item {
    padding-top: 20rpx;
    padding-bottom: 20rpx;
    line-height: 1;
    font-size: 0;
}
.new-guarantee-item +.new-guarantee-item {
    padding-left: 40rpx;
}
.new-guarantee-item text {
    padding-left: 10rpx;
    line-height: 36rpx;
}
.new-guarantee-img{
  width:20rpx;
  height:20rpx;
  /* background:rgba(255,79,125,1); */
  border-radius:50%;
}













