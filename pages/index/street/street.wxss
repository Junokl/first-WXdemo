.scores-list{
    display: flex;
    height: 120rpx;
}
.scores-item{
    width: 33.33%;
    height: 44rpx;
    font-size: 24rpx;
    line-height: 44rpx;
    padding: 38rpx 0;
    overflow: hidden;
}
.scores-grade{
    display: inline-block;
    width: 44rpx;
    height: 44rpx;
    color: #fff;
    text-align: center;
    background-color: #e23435;
    border-radius: 50%;
}
.recommend-list{
    display: flex;
}
.recommend-item{
    width: 220rpx;
    margin-right: 10rpx;
}
.recommend-item:last-child{
    margin-right: 0;
}
.goods-pic{
    width: 220rpx;
    height: 220rpx;
}
.goods-name{
    width: 220rpx;
    height: 32rpx;
    font-size: 24rpx;
    line-height: 32rpx;
    margin-bottom: 20rpx;
}
.goods-pirce{
    font-size: 28rpx;
    line-height: 1;
    text-align: center;
    color: #ff4f70;
}
.category-list{
    position: fixed;
    left: 50%;
    top: 50%;
    z-index: 12;
    width: 540rpx;
    height: 540rpx;
    margin-top: -300rpx;
    margin-left: -300rpx;
    padding: 30rpx;
    background-color: #fff;
    border-radius: 10rpx;
}
.category-item{
    float: left;
    height: 50rpx;
    line-height: 50rpx;
    padding: 0 20rpx;
    font-size: 26rpx;
    border: 1px solid #eee;
    margin-right:20rpx;
    margin-bottom: 20rpx; 
    border-radius: 10rpx;
}
.category-item-on{
    border-color: #ff4f70;
    color: #ff4f70;
}
