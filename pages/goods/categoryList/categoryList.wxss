.container{
    flex-direction: row;
}
.nav{
    width: 180rpx;
    height: 100%;
    text-align: center;
    box-sizing: border-box;
    position: fixed;
    top: 0;
    bottom: 0;
    left: 0;
    background-color: #fff;
    overflow-y: scroll;
    -webkit-overflow-scrolling: touch;
    border-right: 1rpx solid #f5f5f5;
}
.nav-item{
    word-break: keep-all;
    white-space: nowrap;
    overflow: hidden;
    font-size: 32rpx;
    line-height: 96rpx;
    color: #666;
    background-color: white;
    text-overflow: ellipsis;
    position: relative;
}
.nav-item-on{
    color: #333;
}
.nav-item-on:after {
    content: '';
    position: absolute;
    left: 6rpx;
    top: 50%;
    transform: translateY(-50%);
    width: 6rpx;
    height: 24rpx;
    background: linear-gradient(237deg,rgba(255,35,98,1),rgba(255,24,57,1));
    border-radius: 3rpx;
}
.content{
    height: 100%;
    font-size: 28rpx;
    box-sizing: border-box;
    position: fixed;
    top: 0;
    left: 182rpx;
    padding-top: 70rpx;
    bottom: 0;
    right: 0;
    overflow-x: hidden;
    overflow-y: scroll;
    -webkit-overflow-scrolling: touch;
    background-color: #fff;
}
.cate-img{
    width: 100%;
    height: 99px;
}
.content-box+.content-box {
    margin-top: 70rpx;
}
.content-name {
    text-align: center;
    margin-bottom: 20rpx;
    justify-content: center;
    align-items: center;
    display: flex;
    font-size: 0;
}
.content-name text {
    font-size: 28rpx;
    color: #333;
    display: inline-block;
    position: relative;
    padding: 0 14rpx;
}
.content-name .line {
    width: 60rpx;
    height: 1rpx;
    background-color: #D9D9D9;
    display: inline-block;
}
.content-items{
    background-color: white;
    padding: 10rpx 20rpx;
    box-sizing: border-box;
    width: 100%;
}
.content-item{
    width: 33.333333%;
    box-sizing: border-box;
    padding: 10rpx;
    word-break: keep-all;
    white-space: nowrap;
    overflow: hidden;
    display: inline-block;
    text-align: center;
}
.item-image{
    width: 100rpx;
    height: 100rpx;
    overflow: hidden;
    border-radius: 10rpx;
}
.item-name{
    font-size: 24rpx;
    color: #666666;
    padding: 10rpx 0;
}